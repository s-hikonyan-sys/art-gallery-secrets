[MASTER]
ignore=venv,env,.venv,build,dist,*.egg-info,migrations
load-plugins=pylint.extensions.check_elif

[MESSAGES CONTROL]
disable=
    C0111,  # missing-docstring
    C0103,  # invalid-name
    R0903,  # too-few-public-methods
    R0913,  # too-many-arguments

[FORMAT]
max-line-length=100
indent-string='    '

[BASIC]
good-names=i,j,k,ex,Run,_,id,db

[DESIGN]
max-args=7
max-attributes=15
max-branches=15
max-locals=20
max-returns=6
max-statements=50

[IMPORTS]
preferred-module-order=stdlib,thirdparty,local
